@model banvekhugiaitri_nhom4_pttkhdt.Models.VeKhuVuiChoi
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditTicket";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa vé khu vui chơi</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTicket" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaVe" />
            <div class="form-group">
                <label asp-for="MaDaiLy" class="control-label">Tên Đại Lý</label>
                <select asp-for="MaDaiLy" class="form-control" asp-items="ViewBag.MaDaiLy"></select>
                <span asp-validation-for="MaDaiLy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTp" class="control-label">Tên Thành Phố</label>
                <select asp-for="MaTp" class="form-control" asp-items="ViewBag.MaTp"></select>
                <span asp-validation-for="MaTp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenVe" class="control-label">Tên Vé Khu Vui Chơi</label>
                <input asp-for="TenVe" class="form-control" />
                <span asp-validation-for="TenVe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoCua" class="control-label">Giờ mở cửa</label>
                <input asp-for="MoCua" class="form-control" />
                <span asp-validation-for="MoCua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DongCua" class="control-label">Giowf đóng cửa</label>
                <input asp-for="DongCua" class="form-control" />
                <span asp-validation-for="DongCua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnhKvc" class="control-label">Ảnh khu vui chơi</label>
                <input asp-for="AnhKvc" class="form-control" />
                <input asp-for="formFile" class="form-control" />
                <span asp-validation-for="AnhKvc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label">Giá</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slvcl" class="control-label">Só lượng vé còn lại</label>
                <input asp-for="Slvcl" class="form-control" />
                <span asp-validation-for="Slvcl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsDeleted" class="control-label"></label>
                <input asp-for="IsDeleted" class="form-control" />
                <span asp-validation-for="IsDeleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="listTicket">Back to List</a>
</div>


